.videoContainer .header {
  display: flex;
  padding: 10rpx;
}

.videoContainer .header image {
  width : 60rpx;
  height: 60rpx;
}

.videoContainer .header .search {
  border     : 1rpx solid #000;
  flex       : 1;
  font-size  : 26rpx;
  line-height: 60rpx;
  text-align : center;
  margin     : 0 20rpx;
  color      : #A3BBDB;
}

.videoContainer .navScroll {
  display    : flex;
  white-space: nowrap;
  height     : 60rpx;
}

.videoContainer .navScroll .navItem {
  padding    : 0 30rpx;
  font-size  : 28rpx;
  height     : 60rpx;
  line-height: 60rpx;
}

.videoContainer .navScroll .navItem .navContent {
  height    : 60rpx;
  box-sizing: border-box;
}

.videoContainer .navScroll .navItem .active {
  border-bottom: 1rpx solid #A3BBDB;
}

.videoContainer .videoScroll {
  margin-top: 10rpx;
  height    : calc(100vh - 152rpx);
}

.videoContainer .videoScroll .videoItem {
  padding: 0 3%;
}

.videoContainer .videoScroll .videoItem image {
  width        : 100%;
  height       : 360rpx;
  border-radius: 10rpx;
}

.videoContainer .videoScroll .videoItem video {
  width        : 100%;
  height       : 360rpx;
  border-radius: 10rpx;
}

.videoContainer .videoScroll .videoItem .content {
  font-size    : 26rpx;
  height       : 80rpx;
  line-height  : 80rpx;
  max-width    : 500rpx;
  white-space  : nowrap;
  overflow     : hidden;
  text-overflow: ellipsis;
}

.videoContainer .videoScroll .videoItem .footer {
  border-top: 1rpx solid #eee;
  padding   : 20rpx 0;
}

.videoContainer .videoScroll .videoItem .footer .avatar {
  width         : 60rpx;
  height        : 60rpx;
  border-radius : 50%;
  vertical-align: middle;
}

.videoContainer .videoScroll .videoItem .footer .nickName {
  font-size     : 26rpx;
  vertical-align: middle;
  margin-left   : 20rpx;
}

.videoContainer .videoScroll .videoItem .footer .comments_praised {
  float: right;
}

.videoContainer .videoScroll .videoItem .footer .comments_praised .btn {
  display         : inline;
  padding         : 0;
  background-color: transparent;
  border-color    : transparent;
}

.videoContainer .videoScroll .videoItem .footer .comments_praised .btn::after {
  border: none;
}

.videoContainer .videoScroll .videoItem .footer .comments_praised .item {
  margin-left: 50rpx;
  position   : relative;
}

.videoContainer .videoScroll .videoItem .footer .comments_praised .item .iconfont {
  margin   : 0 15rpx;
  font-size: 30rpx;
}

.videoContainer .videoScroll .videoItem .footer .comments_praised .item .count {
  position : absolute;
  top      : 10rpx;
  font-size: 20rpx;
}